---
import Layout from '../../layouts/Layout.astro';
import { ProjectCard } from '../../components/ProjectCard';
import statsmj from "../../images/statsmj.jpeg"

const pageName = "Projects";
const projects = [
	{
		title: "Midjourney Time Series",
		summary: `
		Estimate Midjourney wait times with time series data and neural networks.
		`,
		image: statsmj,
		link: "/projects/mj"
	}
]
---

<Layout title={pageName}>
	<main class="container-fluid py-4">
		<section class="row">
			<aside class="col-md-3"></aside>
			<section class="col-md-6 d-flex justify-content-center">
				<section>
					{
						projects.map(p => (
							<ProjectCard title={p.title} summary={p.summary}
							image={p.image} link={p.link} />
						))
					}
				</section>
			</section>
			<aside class="col-md-3"></aside>
		</section>
	</main>
</Layout>