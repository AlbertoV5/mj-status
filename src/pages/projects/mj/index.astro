---
import Layout from '../../../layouts/Layout.astro';
import Chart from "../../../components/stats/Chart";

const pageName = "MJStatus"
---
<style is:global>
	.tooltip {
		position: absolute;
		padding: 8px;
		pointer-events: none; /* Ensure the tooltip doesn't interfere with mouse events on plot points */
	}
	.tick:first-of-type line{
		fill: none;
		stroke: none;
	}
</style>

<Layout title={pageName}>
	<main class="container-fluid">
		<header class="row px-4 pb-2 text-center">
			<h1>{pageName}</h1>
			<p>
				Average Wait Time (mm:ss) for Relaxed hours per Time of Day (hh:mm) from 00:00 to 23:45 UTC converted to Local Time.
			</p>
		</header>
		<Chart client:only></Chart>
	</main>
</Layout>